<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/newArticle.css">
</head>
<body>
    <div class="col-6 offset-3 bg-light px-3 py-3 mt-20 rounded">
        <form action="/api/articles/uploadArticle" method="POST"  enctype="multipart/form-data">
            <div class="form-group">
                <div class="custom-file mt-2">
                    <input type="file" class="custom-file-input" name="article" id="customFileLang" accept=".pdf" lang="pl-Pl">
                    <label class="custom-file-label"  for="customFileLang">choose file ..</label>
                  </div>
             </div>

            <!-- <div class="form-group text-right">
              <label for="title">عنوان مقاله</label>
              <input type="text" class="form-control text-right" name="title" id="title" placeholder="عنوان مقاله">
            </div>
 
            <div class="form-group text-right">
              <label for="abstract">خلاصه مقاله </label>
              <textarea class="form-control text-right" id="abstract" name="abstract" maxlength="200" rows="3"></textarea>
            </div> -->
 
            <div class="form-group row px-3">
                <button type="submit" id="accept"  class="btn btn-primary mt-3 col-2 ">تایید</button>
                <!-- <button type="button" id="exit" class="btn btn-primary mt-3 col-2 offset-8">انصراف</button>     -->
            </div>  
        </form>

          
    </div>
    <% if (message) { %>
        <div class="alert alert-danger col-12 text-center text-danger fixed-bottom" role="alert">
           <%= message %>
        </div>
    <% } %>    
</body>

<script>
    console.log(screen.height);
    document.getElementsByTagName('body')[0].style.height = screen.height;
    document.getElementsByTagName('body')[0].style.backgroundColor= 'rgb(88, 88, 212)';
  
   
</script>
<%- include('../partials/scripts') %>

<script src="/javascripts/newArticle.js"></script>
</html>